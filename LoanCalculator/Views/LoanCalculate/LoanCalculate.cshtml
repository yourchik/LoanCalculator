@using Domain.Enum
@model LoanCalculator.ViewModels.LoanDetailsViewModel

@{
    ViewData["Title"] = "Калькулятор кредита";
}

<h2>Калькулятор кредита</h2>

@using (Html.BeginForm())
{
    <div class="form-group mt-1">
            @Html.LabelFor(model => model.FullName, new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            @Html.TextBoxFor(model => model.FullName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="form-group mt-1">
        @Html.LabelFor(model => model.Phone, new { @class = "control-label col-md-2" })
        <div class="col-sm-3">
        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Phone)
        </div>
    </div>
    
    <div class="form-group mt-1">
        @Html.LabelFor(model => model.Sum, new { @class = "control-label col-md-2" })
        <div class="col-sm-3">
        @Html.TextBoxFor(model => model.Sum, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Sum)
        </div>
    </div>
    
    <div class="form-group mt-1">
        @Html.LabelFor(model => model.Term, new { @class = "control-label col-md-2" })
        <div class="col-sm-3">
        @Html.TextBoxFor(model => model.Term, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Term)
        </div>
    </div>
    
    <div class="form-group mt-1">
        @Html.LabelFor(model => model.Rate, new { @class = "control-label col-md-2" })
        <div class="col-sm-3">
        @Html.TextBoxFor(model => model.Rate, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Rate)
        </div>
    </div>
    
    <div class="form-group mt-1">
        @Html.LabelFor(model => model.PaymentType, new { @class = "control-label col-md-2" })
        <div class="col-sm-3">
            @Html.DropDownListFor(model => model.PaymentType, new SelectList(Enum.GetValues(typeof(PaymentType))), "Вид платежей", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PaymentType)
        </div>
    </div>
    
    <div class="form-group mt-3">
        <div class="col-sm-3">
            <button type="submit" class="btn btn-success">Расчитать</button>
            <button type="submit" class="btn btn-danger">Отменить</button>
        </div>
    </div>
}